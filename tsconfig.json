{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@env/*": [ "environments/*" ],
      "@core/*": [ "app/core/*" ],
      "@stores/*": [ "app/core/stores/*" ],
      "@shared/*": [ "app/shared/*" ],
      "@shell/*": [ "app/shell/*" ],
      "@app/*": [ "app/*" ]
    }
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
